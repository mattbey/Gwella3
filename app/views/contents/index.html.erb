<div class="page-header">
  <h1>
    Contents
    <a href="/contents/new" class="btn btn-lg btn-success">New Content</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Source</th>
        <th>Title</th>
        <th>Description</th>
        <th>Link</th>
        <th>Rating</th>
        <th>Userid</th>
        <th>Actions</th>
      </tr>

      <% @contents.each do |content| %>
      <tr>
        <td><%= content.source %></td>
        <td><%= content.Title %></td>
        <td><%= content.Description %></td>
        <td><%= content.Link %></td>
        <td><%= content.Rating %></td>
        <td><%= content.UserId %></td>
        <td>
          <a href="/contents/<%= content.id %>" class="btn btn-primary">Show</a>
          <a href="/contents/<%= content.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_content/<%= content.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
